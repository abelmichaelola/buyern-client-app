<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.buyern.buyern.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.buyern.buyern.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.buyern.buyern.ui.search.SearchFragment"
        android:label="fragment_search_list"
        tools:layout="@layout/fragment_search_list" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.buyern.buyern.ui.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.buyern.buyern.ui.bookmark.BookmarkFragment"
        android:label="fragment_bookmark"
        tools:layout="@layout/fragment_bookmark" />
    <fragment
        android:id="@+id/foodFragment"
        android:name="com.buyern.buyern.ui.FoodFragment"
        android:label="fragment_food"
        tools:layout="@layout/fragment_food" />
    <action
        android:id="@+id/action_global_foodFragment"
        app:destination="@id/foodFragment" />
    <fragment
        android:id="@+id/businessFragment"
        android:name="com.buyern.buyern.ui.BusinessFragment"
        android:label="fragment_business"
        tools:layout="@layout/fragment_business" />
    <action
        android:id="@+id/action_global_businessFragment"
        app:destination="@id/businessFragment" />
    <fragment
        android:id="@+id/checkOutFragment"
        android:name="com.buyern.buyern.ui.CheckOutFragment"
        android:label="fragment_check_out"
        tools:layout="@layout/fragment_check_out" />
    <action
        android:id="@+id/action_global_checkOutFragment"
        app:destination="@id/checkOutFragment" />
    <fragment
        android:id="@+id/orderListFragment"
        android:name="com.buyern.buyern.ui.order.OrderListFragment"
        android:label="OrderListFragment" />
    <action
        android:id="@+id/action_global_orderListFragment"
        app:destination="@id/orderListFragment" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.buyern.buyern.ui.order.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order" />
    <action
        android:id="@+id/action_global_orderFragment"
        app:destination="@id/orderFragment" />
    <fragment
        android:id="@+id/paymentMethodsFragment"
        android:name="com.buyern.buyern.ui.PaymentMethod.PaymentMethodsFragment"
        android:label="PaymentMethodsFragment" />
    <action
        android:id="@+id/action_global_paymentMethodsFragment"
        app:destination="@id/paymentMethodsFragment" />
</navigation>